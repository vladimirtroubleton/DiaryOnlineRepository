@model DiaryClassDataLayer.Models.ClassModel

@{
    ViewData["Title"] = "CreateClass";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateClass">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <div class="form-group">
                    <label asp-for="ClassName" class="control-label"></label>
                    <input asp-for="ClassName" class="form-control" />
                    <span asp-validation-for="ClassName" class="text-danger"></span>
                </div>
           
                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-outline-success" />
                </div>
            </form>
        </div>
    </div>
</div>

