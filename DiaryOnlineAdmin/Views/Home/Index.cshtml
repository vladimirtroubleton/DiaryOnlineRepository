@model IEnumerable<AuthorizationClassLibrary.AuthViewModels.UserViewModel>

@{
    ViewData["Title"] = "Index";
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-6">
                <div class="container">
                    <p class="text-center">Активные пользователи</p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Login)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Surname)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RoleName)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Login)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Surname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoleName)
                                    </td>
                                    <td>
                                        
                                        <a href="/Home/DeactivateAccount?userId=@item.Id" class="btn btn-danger">Деактивировать</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-6">
                <div class="container">
                    <p class="text-center">Неактивные пользователи</p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Login)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Surname)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RoleName)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.NonActiveUsers)
                            {
                                <tr>
                                    <td>
                                        @item.Login
                                    </td>
                                    <td>
                                        @item.Email
                                    </td>

                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Surname
                                    </td>
                                    <td>
                                        @item.RoleName
                                    </td>
                                    <td>
                                        <a href="/Home/RemoveUser?userId=@item.Id" class="btn btn-danger">Удалить</a>
                                       
                                        <a  href="/Home/ActivateAccount?userId=@item.Id" class="btn btn-success">Активировать</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>